<%= form_with model: @page, url: adm_site_page_update_path(@page.id), method: :patch, data: { turbo_method: :patch}, class: "#{@page.device.parameterize}", html: { autocomplete: "off"} do |f| %>
  <%= render partial: 'page_form_fields', locals: { f: f } %>

  <% @page.errors.messages.each do |error| %>
