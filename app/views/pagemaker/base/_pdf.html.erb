<% has_pdf = !fields[:file_pdf].blank? %>
<%= content_tag :div, '', class: 'pm pm-pdf' do %>

  <%= content_tag :figure, class: "pdf" do %>
    <%= content_tag :div, class: "pdf-container #{fields[:alignment]}", style: "width: #{fields[:full_width] == '1' ? '100%' : fields[:width] +'px'}" do %>
      <%= content_tag :h3, fields[:titulo] %>
      <%= content_tag :div, class: 'ic', style: "padding-top: #{fields[:aspect_ratio]}%" do %>
        <% if has_pdf %>
          <%= content_tag :iframe, '', src: show_pdf_path(fields[:file_pdf]), class: 'pdf-viewer', width: '100%', height: '100%' %>
        <% end %>
      <% end %>
      <%= content_tag :figcaption, fields[:legenda], class: 'legenda' %>
    <% end %>
  <% end %>
  <div class="preview-mask"></div>
<% end %>

