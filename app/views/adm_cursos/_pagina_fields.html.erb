<% page_id = ( @pagina.id.present? ? @pagina.id : DateTime.now.to_f.to_s.sub('.', '')) %>
<div class="row">
  <fieldset class="col-8"></fieldset>
  
  <fieldset class="col-4">
    <%= f.label :indice, 'Ordem:' %>
    <%= f.number_field :indice, min: 1, max: @aula.aula_pagina.count + 1, step: 1 %>
    <div class="msg">&nbsp;
      <%= error_tag @pagina, :indice %>
    </div>
  </fieldset>
</div>

