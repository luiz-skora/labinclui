<div class="frm frm-adm-edit-curso adm-curso" id="form_edit_curso">

  <div class="row">
    <div class="col-8">
      <%= content_tag :h6, "#{@curso.nome}", class: 'title' %>
    </div>
    <div class="col-4 right top">
      <%= content_tag :h7, fas_icon('angles-right', text: 'MÃ³dulos do Curso', right: true), class: 'label-lnk subtitle', data: { url: adm_cursos_show_curso_path(@curso.id)} %>
    </div>
  </div>

  <%= form_with model: @curso, url: adm_cursos_update_curso_path(@curso.id), method: :post, html: { autocomplete: "off" } do |f| %>
    
    <%= render partial: 'curso_fields', locals: { f: f } %>
    
    <fieldset>
      <%= f.label :ativo, 'Ativo', class: "chk-label" do %>
        <%= f.check_box :ativo %>
        <%= "Ativo" %>
      <% end %>
    </fieldset>

    <fieldset class="btn-form">
      <%= f.submit value: 'gravar Curso', data: { disable_with: 'Gravando Curso...' } %>
    </fieldset>

    <% if flash["msg_#{@curso.id}"].present? %>
      <%= content_tag :div, flash["msg_#{@curso.id}"], class: 'message' %>
    <% end %>
    
  <% end %>
  
</div>
