<% if @more == 1 %>
  <%= content_tag :div, class: 'thumb-next-page  col-fixed', data: { controller: 'autoload', action: 'click->autoload#click', target: '.gallery .thumbs .thumbs-container', viewport: '#gallery-thumbs', container: '#modal-thumbs', more: @more, page: (@page + 1), query: @query, url: @next_page } do %>
    <%= fas_icon('spinner', animation: 'spin', class: 'loading-ico', style: 'display: none' ) %>
    <%= content_tag :label, 'Carregar mais', class: 'more-label', style: 'display: block' %>
    <%= content_tag :div, 'Não foi possivel carregar as informações', class: 'next-page-error msg', style: 'text-align: center; display: none;' %>
  <% end %>
<% end %>
